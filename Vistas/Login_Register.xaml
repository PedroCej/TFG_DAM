<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProyectoTFG.Vistas.Login_Register"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="25"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="Transparent">

    <Grid RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.05*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Crear perfil nuevo" />
        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="1"
            MaximumWidthRequest="600"
            Spacing="10"
            VerticalOptions="Center">
            <Entry x:Name="txtNombre" Placeholder="Nombre" />
            <Entry x:Name="txtApellidos" Placeholder="Apellidos" />
            <Entry
                x:Name="txtEmail"
                Placeholder="Email"
                TextChanged="txtEmail_TextChanged" />
            <Label
                x:Name="lblErrorEmail"
                IsVisible="False"
                Text="Correo electrónico ya está en uso"
                TextColor="Red" />
            <Entry
                x:Name="txtApodo"
                Placeholder="Nombre de Usuario (Opcional)"
                TextChanged="txtApodo_TextChanged" />
            <Label
                x:Name="lblErrorApodo"
                IsVisible="False"
                Text="Nombre de usuario ya está en uso"
                TextColor="Red" />
            <Entry
                x:Name="txtPass"
                IsPassword="True"
                Placeholder="Contraseña" TextChanged="txtPass_TextChanged"/>
            <Entry
                x:Name="txtPass2"
                IsPassword="True"
                Placeholder="Repetir contraseña" TextChanged="txtPass_TextChanged"/>
            <Label
                x:Name="lblErrorPass"
                IsVisible="False"
                Text="Las contraseñas no coinciden"
                TextColor="Red" />
            <Button
                x:Name="btnRegister"
                Clicked="btnRegister_Clicked"
                Text="Registrarse" />
            <Button
                x:Name="btnCancelar"
                Clicked="btnCancelar_Clicked"
                Text="Cancelar" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>